{
  "name": "vnetwork-player",
  "version": "1.1.22",
  "description": "A React component custom player support video m3u8, mp4",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run format && rm -rf dist/ && tsdx build && npm run build:scss",
    "build:scss": "sass src/styles.scss dist/vnetwork-player.min.css --style=compressed --no-source-map",
    "dev": "tsdx watch",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "An Nguyen",
  "license": "MIT",
  "devDependencies": {
    "@size-limit/esbuild": "^11.0.0",
    "@size-limit/esbuild-why": "^11.0.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/hls.js": "^1.0.0",
    "@types/node": "^20.10.1",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "copyfiles": "^2.4.1",
    "hls.js": "^1.4.12",
    "prettier": "3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "size-limit": "^11.0.0",
    "tsdx": "^0.14.1",
    "typescript": "^5.3.2"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/an678-mhg/vnetwork-player"
  },
  "keywords": [
    "vnetwork",
    "player",
    "react-player",
    "vnetwork-player"
  ]
}
